<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_normal" />

    <com.google.android.material.appbar.AppBarLayout

        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_new"
        android:fitsSystemWindows="true">

        <include layout="@layout/include_toolbar_pincode" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_toolbar"
        android:animateLayoutChanges="true"
        android:fitsSystemWindows="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ln_lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.bvb.sotp.view.RegularTextView
                    android:id="@+id/tv_lbl2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_input_pin"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:fonts="Kuro_Regular.ttf" />

                <com.bvb.sotp.view.RegularBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_8"
                    android:text="Soft OTP"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:fonts="Kuro_Bold.ttf" />
            </LinearLayout>

            <include
                android:id="@+id/langLayout"
                layout="@layout/include_lang_none"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/ln_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_lbl3"
            app:layout_constraintTop_toBottomOf="@id/ln_lbl">

            <ImageView
                android:id="@+id/img_code_1"
                style="@style/circlePinView" />

            <ImageView
                android:id="@+id/img_code_2"
                style="@style/circlePinView" />

            <ImageView
                android:id="@+id/img_code_3"
                style="@style/circlePinView" />

            <ImageView
                android:id="@+id/img_code_4"
                style="@style/circlePinView" />

            <ImageView
                android:id="@+id/img_code_5"
                style="@style/circlePinView"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_code_6"
                style="@style/circlePinView"
                android:visibility="gone" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cstr_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_24"
            android:layout_marginRight="@dimen/margin_16"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/ln_lbl"
            card_view:cardElevation="6dp"
            card_view:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2FAB33">

                <ImageView
                    android:id="@+id/img_success"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin_24"
                    android:src="@drawable/ic_check_correct"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/tv_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_24"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="@string/chuc_mung"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:fonts="Kuro_Bold.ttf"
                    app:layout_constraintLeft_toRightOf="@id/img_success"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.bvb.sotp.view.RegularTextView
                    android:id="@+id/tv_success_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_24"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:text="@string/setting_pincode_success"
                    android:textColor="@color/white"
                    android:textSize="13sp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img_success"
                    app:layout_constraintRight_toLeftOf="@id/img_close_success"
                    app:layout_constraintTop_toBottomOf="@id/tv_success" />

                <ImageView
                    android:id="@+id/img_close_success"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:padding="@dimen/margin_16"
                    android:src="@drawable/ic_close"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cstr_fail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/ln_lbl"
            card_view:cardElevation="6dp"
            card_view:cardUseCompatPadding="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EF9604">

                <ImageView
                    android:id="@+id/img_fail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin_24"
                    android:src="@drawable/ic_incorrect"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/tv_fail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_24"
                    android:layout_marginTop="@dimen/margin_16"
                    android:text="@string/incorrect"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"


                    app:layout_constraintLeft_toRightOf="@id/img_fail"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/tv_fail_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_24"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_16"
                    android:text="@string/input_pincode_invalid"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/img_fail"
                    app:layout_constraintRight_toLeftOf="@+id/img_close_fail"
                    app:layout_constraintTop_toBottomOf="@id/tv_fail" />

                <ImageView
                    android:id="@+id/img_close_fail"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginEnd="@dimen/margin_16"
                    android:padding="@dimen/margin_16"
                    android:src="@drawable/ic_close"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <com.bvb.sotp.view.RegularBoldTextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/bg_gradient_add_user"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:textStyle="bold"
            app:fonts="Kuro_Bold.ttf"
            app:layout_constraintBottom_toTopOf="@id/tv_lbl4" />


        <com.bvb.sotp.view.RegularTextView

            android:id="@+id/tv_lbl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/pincode_policy"
            android:textColor="#0e0e0e"
            android:textSize="16sp"
            app:fonts="Kuro_Regular.ttf"
            app:layout_constraintBottom_toTopOf="@id/tv_next" />

        <com.bvb.sotp.view.RegularTextView
            android:id="@+id/tv_lbl4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="#CFCFCF"
            android:gravity="center"
            android:padding="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/lbl_register_new"
            android:textColor="#848181"
            android:textSize="16sp"
            app:fonts="Kuro_Regular.ttf"
            app:layout_constraintBottom_toTopOf="@id/num"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <LinearLayout
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bgNumPad"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/num_1"
                    style="@style/PadNum"
                    android:text="1" />

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/num_2"
                    style="@style/PadNum"

                    android:text="2" />

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/num_3"
                    style="@style/PadNum"
                    android:text="3"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/num_4"
                    style="@style/PadNum"

                    android:text="4" />

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/num_5"
                    style="@style/PadNum"

                    android:text="5"

                    />

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/num_6"
                    style="@style/PadNum"
                    android:text="6"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/num_7"
                    style="@style/PadNum"

                    android:text="7" />

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/num_8"
                    style="@style/PadNum"

                    android:text="8" />

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/num_9"
                    style="@style/PadNum"
                    android:text="9"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/num_delete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/delete"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <com.bvb.sotp.view.RegularTextView

                    android:id="@+id/num_0"
                    style="@style/PadNum"
                    android:text="0" />

                <ImageView
                    android:id="@+id/num_back"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/margin_16"
                    android:src="@drawable/ic_backspace" />
            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/dialog_migrate_layout"
            android:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>