<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/margin_16">

    <LinearLayout
        android:id="@+id/add_user_online"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_16">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_add_account" />

        <com.bvb.sotp.view.RegularTextView
            android:id="@+id/txt_add_user_online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:gravity="center"
            android:text="@string/add_user_online"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_user_offline"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_16">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_add_account" />

        <com.bvb.sotp.view.RegularTextView
            android:id="@+id/txt_add_user_offline"
            android:lineSpacingExtra="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_8"
            android:text="@string/add_user_offline"
            android:textColor="@color/colorPrimary"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>